{{!
    @template local_tagmap/questioncoverage

    Template for question coverage tab.

    Example context (json):
    {
        "questions": [
            {
                "id": "Q1195",
                "name": "Q001",
                "url": "/question/bank/previewquestion/preview.php?id=1195&amp;courseid=18",
                "tags": [
                    {
                        "name": "ammoniagenesis",
                        "covered": false
                    },
                    {
                        "name": "bicarbonate reclamation",
                        "covered": false
                    },
                    {
                        "name": "hydrogen secretion",
                        "covered": false
                    },
                    {
                        "name": "non-carbonic acid anions",
                        "covered": false
                    }
                ],
                "tagCoverage": 0
            }
        ]
    }
}}

<div class="container">
    {{#questions}}
        <div class="row">
            <div class="col-6">
                <a href="{{url}}" target="_blank" rel="noopener">{{name}}</a>
            </div>
            <div class="col-5">
                <div class="progress">
                    <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: {{tagCoverage}}%;" aria-valuenow="{{tagCoverage}}" aria-valuemin="0" aria-valuemax="100">{{tagCoverage}}%</div>
                </div>

                <div class="collapse mt-3" id="collapseTags-{{id}}">
                    {{#tags}}
                        <span class="badge badge-tag badge-pill badge-{{#covered}}info{{/covered}}{{^covered}}secondary{{/covered}}">{{name}}</span>
                    {{/tags}}
                </div>
            </div>
            <div class="col-1">
                <a class="btn btn-sm btn-secondary" data-toggle="collapse" href="#collapseTags-{{id}}" role="button" aria-expanded="false" aria-controls="collapseTags-{{id}}"><i class="fa-solid fa-caret-down"></i></a>
            </div>
        </div>
         <hr>
    {{/questions}}
</div>
