{{!
    @template local_tagmap/resourceusage

    Template for resource usage tab.

    Example context (json):
    {
        "resources": [
            {
                "id": "R141",
                "name": "Introduction",
                "url": "/mod/resource/view.php?id=141",
                "tags": [
                    {
                        "name": "cancer",
                        "used": true
                    },
                    {
                        "name": "kidneys",
                        "used": true
                    },
                    {
                        "name": "acute pathologies",
                        "used": false
                    },
                    {
                        "name": "chronic pathologies",
                        "used": false
                    },
                    {
                        "name": "urogenital system",
                        "used": false
                    }
                ],
                "tagUsage": 40
            }
        ]
    }
}}

<div class="container">
    {{#resources}}
        <div class="row">
            <div class="col-6">
                <a href="{{url}}" target="_blank" rel="noopener">{{name}}</a>
            </div>
            <div class="col-5">
                <div class="progress">
                    <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: {{tagUsage}}%;" aria-valuenow="{{tagUsage}}" aria-valuemin="0" aria-valuemax="100">{{tagUsage}}%</div>
                </div>

                <div class="collapse mt-3" id="collapseTags-{{id}}">
                    {{#tags}}
                        <span class="badge badge-tag badge-pill badge-{{#used}}info{{/used}}{{^used}}secondary{{/used}}">{{name}}</span>
                    {{/tags}}
                </div>
            </div>
            <div class="col-1">
                <a class="btn btn-sm btn-secondary" data-toggle="collapse" data-bs-toggle="collapse" href="#collapseTags-{{id}}" role="button" aria-expanded="false" aria-controls="collapseTags-{{id}}"><i class="fa-solid fa-caret-down"></i></a>
            </div>
        </div>
        <hr>
    {{/resources}}
</div>
