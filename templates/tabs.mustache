{{!
    @template local_tagmap/tabs

    Tabs.

    Example context (json):
    {
    }
}}

<ul class="nav nav-tabs my-4" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="clouds-tab" data-toggle="tab" data-bs-toggle="tab" data-target="#cloudsPane" data-bs-target="#cloudsPane" type="button" role="tab" aria-controls="cloudsPane" aria-selected="true">{{#str}} pluginname, local_tagmap {{/str}}</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="resourceUsage-tab" data-toggle="tab" data-bs-toggle="tab" data-target="#resourceUsagePane" data-bs-target="#resourceUsagePane" type="button" role="tab" aria-controls="resourceUsagePane" aria-selected="false">{{#str}} resourceusage, local_tagmap {{/str}}</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="questionCoverage-tab" data-toggle="tab" data-bs-toggle="tab" data-target="#questionCoveragePane" data-bs-target="#questionCoveragePane" type="button" role="tab" aria-controls="questionCoveragePane" aria-selected="false">{{#str}} questioncoverage, local_tagmap {{/str}}</button>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="cloudsPane" role="tabpanel" aria-labelledby="clouds-tab">
        <h4 class="mt-5 mb-4">{{#str}} resourcetags, local_tagmap {{/str}}</h4>
        <div id="resourceTagCloud" class="tagmap"></div>

        <h4 class="mt-5 mb-4">{{#str}} questiontags, local_tagmap {{/str}}</h4>
        <div id="questionTagCloud" class="tagmap"></div>
    </div>
    <div class="tab-pane fade" id="resourceUsagePane" role="tabpanel" aria-labelledby="resourceUsage-tab">
        <p>{{#str}} resourceusagedescription, local_tagmap {{/str}}</p>
        <div id="resourceUsage"></div>
    </div>
    <div class="tab-pane fade" id="questionCoveragePane" role="tabpanel" aria-labelledby="questionCoverage-tab">
        <p>{{#str}} questioncoveragedescription, local_tagmap {{/str}}</p>
        <div id="questionCoverage"></div>
    </div>
</div>
